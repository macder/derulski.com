<ol class="c-comment u-pt">
  <li>
    <div class="o-flag o-flag--small">

      <div class="o-flag__img">
        <img class="c-comment__avatar" src="{{ comment.avatar }}" alt="" title="">
      </div>

      <div class="o-flag__body">
        <p class="c-comment__author u-text-md u-m-none"><b>{{ comment.author }}</b></p>
        <p class="c-comment__time u-text-sm">{{ comment.date }} at {{ comment.time }}</p>
      </div>
    </div>

    <div class="c-comment__body u-mt">
      {{ comment.content|wpautop|raw }}
    </div>

    <div class="c-comment__reply u-mb">
      {{ comment.reply_link }}
    </div>

    {% if comment.children %}
      {% for item in comment.children %}
        {% include '01-molecules/blocks/comment/comment.twig' with { comment: item } %}
      {% endfor %}
    {% endif %}
  </li>
</ol>
