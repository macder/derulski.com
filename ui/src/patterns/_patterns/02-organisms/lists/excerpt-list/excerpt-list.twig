<div class="c-excerpt-list">
  {% if title %}
    <h2 class="u-mb-large u-text-center">{{ title }}</h2>
  {% endif %}

  <div class="o-layout o-layout--large o-layout--stretch">
    {% for item in items %}
      <div class="o-layout__item u-1/2@md u-mb">
        {% include '01-molecules/text/excerpt/excerpt.twig' with item %}
      </div>
    {% endfor %}
  </div>
</div>
