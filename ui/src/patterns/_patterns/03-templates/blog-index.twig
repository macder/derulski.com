<div class="o-wrapper u-pt-large">
  <div class="o-layout">

    {% if index_name %}
      <div class="o-layout__item u-2/3@md u-pt u-pr-large@md">
        <h2 class="u-text-center">{{ index_name }}</h2>
      </div>
    {% endif %}

    <div class="o-layout__item u-2/3@md u-pt u-pr@md">
      {% include '02-organisms/lists/excerpt-list/excerpt-list.twig' with {
        items: posts
      } %}
      <div class="u-text-center">
        {% include '01-molecules/00-navigation/pagination/pagination.twig' with pagination %}
      </div>
    </div>
    <div class="o-layout__item u-1/3@md">
      {% block sidebar %}
        {% if sidebar %}
          {% include '02-organisms/sidebars/blog-sidebar/blog-sidebar.twig' with sidebar %}
        {% endif %}
      {% endblock %}
    </div>
  </div>
</div>
