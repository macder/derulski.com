{% extends "layouts/base.twig" %}

{% block content %}
  {% embed '03-templates/post.twig' with {
    title: post.title,
    date: post.date,
    author: post.author,
    body: post.content,
    comments: post.comments,
    comment_count: post.get_comment_count,
  } %}

    {% block sidebar %}
      {{ sidebar }}
    {% endblock %}

  {% endembed %}
{% endblock %}
