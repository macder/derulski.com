<div class="c-services o-layout o-layout--large">
  {% for item in items %}
    <div class="o-layout__item u-1/2@sm u-1/3@md u-mb@sm">
      <div class="o-box">
        {% embed "@layouts/objects/block.twig" %}

          {% block block_img %}
            <i class="fa {{ item.icon }}" aria-hidden="true"></i>
          {% endblock %}

          {% block block_body %}
            <h3 class="o-block__body-heading">{{ item.heading }}</h3>
            <p class="o-block__body-text">{{ item.body }}</p>
          {% endblock %}

        {% endembed %}
      </div>
    </div>
  {% endfor %}
</div>
