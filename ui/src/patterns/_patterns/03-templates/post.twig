<div class="o-wrapper u-pt-huge">
  <div class="o-layout u-mv-large">
    <div class="o-layout__item u-2/3@md">
      {% include '02-organisms/text/article/article.twig' %}
      {% if comments %}
        <div class="u-mv-huge">
          {% include '02-organisms/lists/comment-thread/comment-thread.twig' %}
        </div>
      {% endif %}
      <div class="u-3/4@md u-mb" id="respond">
        {% include '02-organisms/forms/comment-form/comment-form.twig' %}
      </div>
    </div>
    <div class="o-layout__item u-1/3@md">
      {% block sidebar %}
        {% if sidebar %}
          {% include '02-organisms/sidebars/blog-sidebar/blog-sidebar.twig' with sidebar %}
        {% endif %}
      {% endblock %}
    </div>
  </div>
</div>
